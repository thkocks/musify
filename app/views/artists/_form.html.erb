<%= form_for @room do |f| %>
  <div class="form-group">

  <div class="form-group">
    <label>Name</label>
    <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Genre(s)</label>
    <%= f.text_field :genre, placeholder: "Genre(s)", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Biography</label>
    <%= f.text_area :description, rows: 5, placeholder: "Biography", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Artist image</label>
    <%= f.text_field :image_url, placeholder: "Artist image", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
