<ul class="sidebar-list">
  <li><%= link_to "Back", artists_path, class: "btn btn-primary" %> <%= link_to "Add new artist", new_artist_path, class: "btn btn-primary" %></li>
</ul>

<% @artists.each do |artist| %>
  <div class="box">
    <div class="panel panel-primary">
      <!-- <div class="panel-heading">
        Artists
      </div> -->
      <div class="panel-body">
        <div class="row">
          <div class="col-md-7">
            <h4><%= artist.name %></h4>
          </div>
          <div class="profile-img-small">
            <%=image_tag artist.image_url %>
          </div>
          <div class="col-md-3 right">
            <%= link_to "View", artist, class: "btn btn-default" %> <%= link_to "Update", edit_artist_path(artist), class: "btn btn-default" %>
          </div>
        </div>
    </div>
  </div>
<% end %>
