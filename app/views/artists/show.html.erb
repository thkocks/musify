<div class="panel panel-primary">
  <div class="panel-heading"><%= @artist.name %></div>

  <div class="panel-body">

    <p>Artist: <%= @artist.name %></p>
    <p>Genre(s): <%= @artist.genre %></p>
    <p>Bio: <%= @artist.bio %></p>
    <div class="profile-img-large">
      <%=image_tag @artist.image_url %>
    </div>
  </div>

</div>

<%= link_to "Back", artists_path, class: "btn btn-default" %> <%= link_to "Edit", edit_artist_path, class: "btn btn-default" %> <%= link_to "Add song", new_song_path, class: "btn btn-default" %>
